<script>
function main() {
    const area = document.querySelector(`#area`)

    let count = 0
    let fn = () => {
        count++
        area.textContent = count >= 100000000 ? 0 : count
    }
    // interval(fn)    
}

function interval(callback) {
    window.setTimeout(() => {
        callback()
        interval(callback)
    })
}

